<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vertical_home"
    tools:context=".Home">


    <TextView
        android:id="@+id/buttonHolder"
        android:layout_width="278dp"
        android:layout_height="300dp"
        android:background="@drawable/box1"
        android:fontFamily="@font/baloo_chettan"
        android:paddingTop="10dp"
        android:text="My Recipes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/open"
        android:layout_width="157dp"
        android:layout_height="47dp"

        android:backgroundTint="#C3592708"
        android:drawableLeft="@drawable/ic_baseline_menu_book_24"
        android:fontFamily="@font/baloo_chettan"
        android:text="OPEN"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/search"
        app:layout_constraintEnd_toEndOf="@+id/buttonHolder"
        app:layout_constraintStart_toStartOf="@+id/buttonHolder"
        app:layout_constraintTop_toBottomOf="@+id/add" />

    <Button
        android:id="@+id/add"

        android:layout_width="157dp"
        android:layout_height="47dp"

        android:layout_marginTop="88dp"
        android:backgroundTint="#C3592708"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:fontFamily="@font/baloo_chettan"
        android:text="Add"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/open"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/open"
        app:layout_constraintTop_toTopOf="@+id/buttonHolder" />

    <Button
        android:id="@+id/search"
        android:layout_width="157dp"
        android:layout_height="47dp"

        android:layout_marginBottom="16dp"
        android:backgroundTint="#C3592708"

        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:fontFamily="@font/baloo_chettan"
        android:text="SEARCH"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHolder"
        app:layout_constraintEnd_toEndOf="@+id/open"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/open" />


</androidx.constraintlayout.widget.ConstraintLayout>