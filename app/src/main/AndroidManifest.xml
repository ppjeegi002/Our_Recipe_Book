<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.recipe_book.our_recipebook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/add_image"
        android:label="@string/app_name"
        android:roundIcon="@drawable/add_image"
        android:supportsRtl="true"
        >

        <activity android:name="com.recipe_book.our_recipebook.SearchExternalRecipes"
            android:theme="@style/Theme2.MyRecipeBook"/>
        <activity android:name="com.recipe_book.our_recipebook.UpdateRecipe"
            android:theme="@style/Theme.MyRecipeBook"/>
        <activity android:name="com.recipe_book.our_recipebook.Details"
            android:theme="@style/Theme.MyRecipeBook"/>
        <activity android:name="com.recipe_book.our_recipebook.AddRecipe"
            android:theme="@style/Theme.MyRecipeBook" />
        <activity android:name="com.recipe_book.our_recipebook.Recipelist"
            android:theme="@style/Theme.MyRecipeBook"/>
        <activity android:name="com.recipe_book.our_recipebook.Home"
            android:theme="@style/Theme.MyRecipeBook" >
        <intent-filter><action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"></category> </intent-filter>


            </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>